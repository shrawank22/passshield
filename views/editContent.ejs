<%- include("partials/header")  %>

<div class="my-class">
	<div class="form">
		<h2>Edit <%= content.website %>'s credential</h2>
		<form action="/contents/<%= content._id %>?_method=PUT" method="POST">
			<div class="form-group mb-2">
				<input class="form-control" type="text" name="content[website]" value="<%= content.website %>" required>
			</div>
			<div class="form-group mb-2">
				<input class="form-control" type="text" name="content[username]" value="<%= content.username %>" required>
			</div>
			<div class="form-group mb-2">
                <input style="display: inline;" class="form-control" name="content[password]" type="text" id="password" value="<%= content.password %>" placeholder="password " required>
			</div>
			<div class="form-group mb-2">
				<input class="form-control" type="password" id="confirm_password" name="content[conform_password]" value="<%= content.conf %>" placeholder="confirm password " required onkeyup="validatePassword();">
				<span id="password_error" style="color: red;"></span>
			</div>
			<div class="form-group mb-2">
                <button class="btn btn-lg btn-primary btn-block">Edit</button>
            </div>
		</form>
	</div>
</div>

<%- include("partials/footer")  %>

